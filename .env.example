# Environment configuration for Digital Twin Urban Flooding project
# Copy this file to .env and fill in the secrets/values.

# MongoDB connection string (leave default for local dev)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DBNAME=urban_flooding

# Weather API configuration
WEATHER_API_URL=http://localhost:8000/api/v1/weather
WEATHER_API_TOKEN=REPLACE_WITH_REAL_TOKEN

# Optional: Override default Perth coordinates for demo
DEFAULT_LAT=-31.95
DEFAULT_LON=115.86

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
